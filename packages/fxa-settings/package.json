{
  "name": "fxa-settings",
  "version": "0.1.0",
  "homepage": "https://accounts.firefox.com/beta/settings",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.5.0",
    "@testing-library/user-event": "7.2.1",
    "@types/jest": "24.9.1",
    "@types/node": "12.12.42",
    "@types/react": "16.9.35",
    "@types/react-dom": "16.9.8",
    "classnames": "2.2.6",
    "fxa-react": "workspace:*",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-scripts": "3.4.1",
    "typescript": "3.8.3"
  },
  "scripts": {
    "start": "npm run build-postcss && pm2 start pm2.config.js",
    "restart": "npm run build-postcss && pm2 restart pm2.config.js",
    "stop": "pm2 stop pm2.config.js",
    "build": "tsc --build ../fxa-react && NODE_ENV=production npm run build-postcss && SKIP_PREFLIGHT_CHECK=true INLINE_RUNTIME_CHUNK=false rescripts build",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "lint": "npm-run-all --parallel lint:eslint lint:sass",
    "lint:eslint": "eslint .",
    "storybook": "start-storybook -p 6008",
    "build-storybook": "build-storybook",
    "build-postcss": "postcss src/styles/tailwind.css -o src/styles/tailwind.out.css"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.9.6",
    "@rescripts/cli": "0.0.14",
    "@sentry/browser": "5.15.5",
    "@storybook/addon-actions": "5.3.19",
    "@storybook/addon-links": "5.3.19",
    "@storybook/addons": "5.3.19",
    "@storybook/preset-create-react-app": "2.1.2",
    "@storybook/react": "5.3.19",
    "@testing-library/dom": "7.5.8",
    "@types/babel__core": "7.1.7",
    "@types/classnames": "2.2.10",
    "@types/webpack": "4.41.13",
    "babel-loader": "8.1.0",
    "eslint": "6.8.0",
    "eslint-plugin-fxa": "2.0.2",
    "eslint-plugin-jest": "23.13.1",
    "eslint-plugin-react": "7.20.0",
    "fxa-shared": "workspace:*",
    "node-sass": "4.14.1",
    "npm-run-all": "4.1.5",
    "pm2": "4.4.0",
    "postcss-cli": "7.1.1",
    "tailwindcss": "1.4.6",
    "webpack": "4.43.0"
  }
}
