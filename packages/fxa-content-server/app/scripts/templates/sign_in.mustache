<header>
  <h1 class="fox-logo"><span>{{#t}}Firefox Accounts{{/t}}</span></h1>

  {{^forceAuth}}
    <h2 id="fxa-signin-header">{{#t}}Sign in{{/t}}</h2>
  {{/forceAuth}}
  {{#forceAuth}}
    <h2 id="fxa-force-auth-header">{{#t}}Sign in to continue{{/t}}</h2>
  {{/forceAuth}}
</header>

<section>
  {{#error}}
    <div class="error">{{error}}</div>
  {{/error}}
  {{^error}}

  <div class="error"></div>
  <form>
    {{^forceAuth}}
      <div class="input-row">
        <input type="email" class="email" placeholder="{{#t}}Email{{/t}}" autofocus>
      </div>
    {{/forceAuth}}
    {{#forceAuth}}
      <p>{{ email }}</p>
    {{/forceAuth}}

    <div class="input-row password-row">
      <input type="password" class="password" placeholder="{{#t}}Password{{/t}}" pattern=".{8,}" required {{#forceAuth}}autofocus{{/forceAuth}} {{#isSync}}autocomplete="off"{{/isSync}} />

      <label for="show-password" class="show-password-label">
        <div class="show-password-label-text">{{#t}}Show{{/t}}</div>
        <input id="show-password" type="checkbox" class="show-password">
      </label>
    </div>

    <div class="button-row">
      <button type="submit" disabled>{{#t}}Sign in{{/t}}</button>
    </div>
  </form>

  <div class="links">
    {{^forceAuth}}
      <a href="/reset_password" class="left reset-password">{{#t}}Forgot password?{{/t}}</a>
      <a href="/signup" class="right sign-up">{{#t}}Create an account{{/t}}</a>
    {{/forceAuth}}
    {{#forceAuth}}
      <a href="/reset_password" class="reset-password">{{#t}}Forgot password?{{/t}}</a>
    {{/forceAuth}}
  </div>

  <div class="privacy-links">
    {{#t}}By proceeding, I agree to the <a id="fxa-tos" href="/legal/terms">Terms of Service</a> and <a id="fxa-pp" href="/legal/privacy">Privacy Notice</a> of Firefox online services.{{/t}}
  </div>
  {{/error}}
</section>
