  {{#showSignUpMarketing}}
    <aside class="marketing-ios">
      {{#isIos}}
        <p>
          {{#t}}Get the full Sync experience.{{/t}}
          <br>
          {{#t}}Download Firefox for iOS!{{/t}}
        </p>
        <a class="marketing-link marketing-link-ios" href="https://itunes.apple.com/app/apple-store/id989804926?ct=fxa-verification-link" data-marketing-id="spring-2015-android-ios-sync"><img width="129" height="45" src="{{ appStoreImage }}" alt="{{#t}}Download Firefox for iOS!{{/t}}" /></a>
      {{/isIos}}

      {{#isAndroid}}
        <p>
          {{#t}}Get the full Sync experience.{{/t}}
          <br>
          {{#t}}Download Firefox for Android.{{/t}}
        </p>
        <a class="marketing-link marketing-link-android" href="market://details?id=org.mozilla.firefox&amp;referrer=utm_source%3Dmozilla%26utm_medium%3DReferral%26utm_campaign%3Dsync-android-snippet" data-marketing-id="spring-2015-android-ios-sync"><img width="129" height="45" src="{{ playStoreImage }}" alt="{{#t}}Download Firefox for Android.{{/t}}"></a>
      {{/isAndroid}}

      {{#isOther}}
        <div class="os-general">
          <p>
            {{#t}}Get the full Sync experience.{{/t}}
            <br>
            {{#t}}Download Firefox for mobile devices.{{/t}}
          </p>

          <ul>
            <li>
                <a class="marketing-link marketing-link-android" href="https://play.google.com/store/apps/details?id=org.mozilla.firefox&amp;referrer=utm_source%3Dmozilla%26utm_medium%3DReferral%26utm_campaign%3Dsync-desktop-snippet" data-marketing-id="spring-2015-android-ios-sync"><img width="129" height="45" src="{{ playStoreImage }}" alt="{{#t}}Download Firefox for Android.{{/t}}"></a>
            </li>
            <li>
                <a class="marketing-link marketing-link-ios" href="https://itunes.apple.com/app/apple-store/id989804926?ct=fxa-verification-link" data-marketing-id="spring-2015-android-ios-sync"><img width="129" height="45" src="{{ appStoreImage }}" alt="{{#t}}Download Firefox for iOS!{{/t}}" /></a>
            </li>
          </ul>
        </div>
      {{/isOther}}
    </aside>
  {{/showSignUpMarketing}}
