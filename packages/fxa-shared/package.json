{
  "name": "fxa-shared",
  "version": "1.187.3",
  "description": "Shared module for FxA repositories",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./": "./dist/"
  },
  "scripts": {
    "postinstall": "tsc --build || true",
    "build": "tsc --build",
    "start": "pm2 start pm2.config.js",
    "stop": "pm2 stop pm2.config.js",
    "restart": "pm2 restart pm2.config.js",
    "test": "yarn test:mocha && yarn test:jest",
    "test:mocha": "tsc --build && node ./scripts/mocha-coverage.js -r ts-node/register --recursive test/**/*.{js,ts}",
    "test:jest": "jest --coverage",
    "audit": "npm audit --json | audit-filter --nsp-config=.nsprc --audit=-",
    "lint": "eslint .",
    "format": "prettier --write --config ../../_dev/.prettierrc '**'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla/fxa.git"
  },
  "keywords": [
    "fxa"
  ],
  "author": "Mozilla (https://mozilla.org/)",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla/fxa/issues"
  },
  "engines": {
    "node": ">=12"
  },
  "homepage": "https://github.com/mozilla/fxa/tree/main/packages/fxa-shared#readme",
  "devDependencies": {
    "@nestjs/testing": "^7.4.4",
    "@types/chai": "^4.2.11",
    "@types/generic-pool": "^3.1.9",
    "@types/jest": "^26.0.13",
    "@types/lodash.omitby": "^4",
    "@types/lodash.pick": "^4",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.10.1",
    "@types/proxyquire": "^1.3.28",
    "@types/redis": "^2.8.16",
    "@types/sinon": "^9.0.4",
    "audit-filter": "^0.5.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-fxa": "^2.0.2",
    "jest": "26.0.1",
    "jsdom": "16.2.2",
    "jsdom-global": "3.0.2",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1",
    "pm2": "^4.4.1",
    "prettier": "^2.0.5",
    "proxyquire": "^2.1.3",
    "sinon": "^9.0.3",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "3.9.7",
    "underscore": "^1.10.2",
    "uuid": "^8.3.0"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.4",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.4.4",
    "@nestjs/graphql": "^7.6.0",
    "@nestjs/mapped-types": "^0.1.0",
    "@sentry/browser": "^5.17.0",
    "@sentry/integrations": "^5.23.0",
    "@sentry/node": "^5.23.0",
    "@types/js-md5": "^0.4.2",
    "accept-language": "^2.0.17",
    "ajv": "^6.12.2",
    "aws-sdk": "^2.752.0",
    "bluebird": "^3.7.2",
    "celebrate": "^10.0.1",
    "cors": "^2.8.5",
    "find-up": "^5.0.0",
    "generic-pool": "^3.7.1",
    "graphql": "^15.3.0",
    "hot-shots": "^7.8.0",
    "joi": "^14.3.1",
    "js-md5": "^0.7.3",
    "lodash.omitby": "^4.6.0",
    "lodash.pick": "^4.4.0",
    "moment": "^2.24.0",
    "mozlog": "^3.0.1",
    "node-uap": "git://github.com/mozilla-fxa/node-uap.git#96dc1f9f224422ec184395b6408cd1fc40ee452a",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "stripe": "^8.69.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "nestjs",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
