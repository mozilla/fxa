<div id="account-recovery-confirm-password">
    <section class="modal-panel">
        <div class="error"></div>

        <h2>{{#t}}Step 1 of 2: Re-enter password{{/t}}</h2>

        <form novalidate>
            <p class="description">
                {{#t}}Enter your password to view your recovery key.{{/t}}
            </p>

            <div class="email">{{email}}</div>
            <input type="email" class="email hidden" value="{{email}}" disabled />
            <div class="input-row password-row">
                <input type="password" class="password tooltip-below" id="password" placeholder="{{#t}}Enter Password{{/t}}" required pattern=".{8,}" autofocus/>
            </div>

            <div class="button-row">
                <button class="primary-button generate-key-link">{{#t}}Continue{{/t}}</button>
                <button class="tertiary-button cancel-link">{{#t}}Cancel{{/t}}</button>
            </div>
        </form>
    </section>
</div>
