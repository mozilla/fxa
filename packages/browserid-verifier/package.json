  "main": "lib/server.js",
  "dependencies": {
    "async": "3.2.2",
    "body-parser": "^1.19.1",
    "browserid-local-verify": "0.5.2",
    "compute-cluster": "0.0.9",
    "convict": "^6.2.1",
    "convict-format-with-moment": "^6.2.0",
    "convict-format-with-validator": "^6.2.0",
    "express": "^4.17.2",
    "intel": "1.2.0",
