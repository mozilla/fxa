    "react-hook-form": "^6.15.8",
    "react-markdown": "^8.0.5",
    "react-refresh": "^0.14.2",
    "react-webcam": "^7.2.0",
    "rehype-raw": "^6.1.1",
    "resolve": "^1.22.8",
    "resolve-url-loader": "^5.0.0",
    "sass-loader": "^14.2.1",
