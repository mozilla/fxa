<div id="main-content" class="card">
  <header>
    <h1 id="fxa-avatar-crop-header">{{#t}}Account picture{{/t}}</h1>
  </header>

  <section>
    <div class="error"></div>
    <div class="success"></div>

    <div class="cropper">
      <div class="wrapper">
        <div class="mask"></div>
        <div class="drag-overlay"></div>
        <img src="" class="avatar"/>
      </div>

      <p class="notice">{{#t}}Position and rotate your picture as needed{{/t}}</p>

      <div class="controls">
        <span class="zoom-out icon-zoom-out"></span>
        <input class="slider" type="range" min="0" max="100" step="1" value="0" />
        <span class="zoom-in icon-zoom-in"></span>
        <button class="rotate icon-cw"></button>
      </div>

      <canvas id="imageCanvas"></canvas>
    </div>

    <form novalidate>
      <div class="button-row">
        <button id="submit-btn" type="submit">{{#t}}Save{{/t}}</button>
      </div>
    </form>
    <ul class="links">
      <li><a href="/settings/avatar/change" class="cancel">{{#t}}Cancel{{/t}}</a>
    </ul>

  </section>
</div>
