<mj-section>
  <mj-column>
    <mj-text css-class="text-header">
  <span data-l10n-id="verifyAccountChange-title">Are you changing your account info?</span>
    </mj-text>
    <mj-text css-class="text-body">
  <span data-l10n-id="verifyAccountChange-safe">Help us keep your account safe by approving this change on:</span>
    </mj-text>
  </mj-column>
</mj-section>

<%- include('/partials/userInfo/index.mjml') %>

<mj-section>
  <mj-column>
    <mj-text css-class="text-body">
        <span data-l10n-id="verifyAccountChange-prompt">
          If yes, here is your authorization code:
        </span>
    </mj-text>

    <mj-text css-class="code-large"><%- code %></mj-text>

    <mj-text css-class="text-body-no-margin">
      <span data-l10n-id="verifyAccountChange-expiry-notice" data-l10n-args="<%= JSON.stringify({ expirationTime }) %>">
        It expires in <%- expirationTime === 1 ? '1 minute' : expirationTime + ' minutes' %>.
      </span>
    </mj-text>
  </mj-column>
</mj-section>

<%- include('/partials/automatedEmailChangePassword/index.mjml') %>
