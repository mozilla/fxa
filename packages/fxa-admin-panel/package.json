{
  "name": "fxa-admin-panel",
  "version": "0.1.0",
  "description": "FxA Admin Panel",
  "scripts": {
    "build-postcss": "postcss src/styles/tailwind.css -o src/styles/tailwind.out.css",
    "build-storybook": "NODE_ENV=production npm run build-postcss && build-storybook",
    "build:client": "tsc --build ../fxa-react && tsc --build && NODE_ENV=production npm run build-postcss && SKIP_PREFLIGHT_CHECK=true PUBLIC_URL=/ INLINE_RUNTIME_CHUNK=false CI=false rescripts build",
    "build:server": "tsc -p server/tsconfig.json",
    "build": "npm-run-all build:client build:server",
    "eject": "react-scripts eject",
    "format": "prettier --write --config ../../_dev/.prettierrc '**'",
    "lint": "eslint .",
    "restart": "tsc --build ../fxa-react && npm run build-postcss && pm2 restart pm2.config.js",
    "start": "tsc --build ../fxa-react && npm run build-postcss && pm2 start pm2.config.js",
    "stop": "pm2 stop pm2.config.js",
    "storybook": "npm run build-postcss && start-storybook -p 6009",
    "test:frontend": "SKIP_PREFLIGHT_CHECK=true PUBLIC_URL=/ INLINE_RUNTIME_CHUNK=false CI=true rescripts test --coverage --verbose",
    "test:server": "jest --coverage --verbose --config server/jest.config.js",
    "test": "npm-run-all test:frontend test:server"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "apollo-boost": "^0.4.9",
    "apollo-client": "^2.6.4",
    "body-parser": "^1.19.0",
    "convict": "^6.0.0",
    "convict-format-with-moment": "^6.0.0",
    "convict-format-with-validator": "^6.0.0",
    "dateformat": "^3.0.3",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.0",
    "fxa-react": "workspace:*",
    "graphql": "^14.6.0",
    "helmet": "^3.23.3",
    "mozlog": "^2.2.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "on-headers": "^1.0.2",
    "react": "^16.13.0",
    "react-apollo": "^3.1.3",
    "react-dom": "^16.13.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.4.1",
    "serve-static": "^1.14.1"
  },
  "devDependencies": {
    "@apollo/react-testing": "3.0.0",
    "@babel/core": "^7.10.3",
    "@rescripts/cli": "0.0.14",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/preset-create-react-app": "^2.1.1",
    "@storybook/react": "^5.3.19",
    "@testing-library/dom": "^6.15.0",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/babel__core": "7.1.7",
    "@types/chance": "^1.0.10",
    "@types/convict": "^5.2.1",
    "@types/dateformat": "^3.0.1",
    "@types/eslint": "6.8.1",
    "@types/express": "^4.17.2",
    "@types/helmet": "0.0.45",
    "@types/jest": "^24.9.1",
    "@types/jsdom": "^12.2.4",
    "@types/on-headers": "^1.0.0",
    "@types/react": "^16.8.0",
    "@types/react-router-dom": "^5.1.5",
    "@types/serve-static": "1.13.3",
    "@types/supertest": "^2.0.8",
    "@types/webpack": "4.41.16",
    "@typescript-eslint/eslint-plugin": "2.33.0",
    "@typescript-eslint/parser": "2.33.0",
    "apollo-cache-inmemory": "^1.6.2",
    "apollo-link": "^1.2.12",
    "apollo-utilities": "^1.3.2",
    "babel-loader": "^8.1.0",
    "chance": "^1.1.4",
    "eslint": "^6.8.0",
    "eslint-plugin-fxa": "^2.0.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-react": "7.19.0",
    "fxa-shared": "workspace:*",
    "jest": "^24.9.0",
    "pm2": "^4.4.1",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "tailwindcss": "^1.4.6",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.10.2",
    "typescript": "3.9.7",
    "webpack": "^4.43.0"
  }
}
