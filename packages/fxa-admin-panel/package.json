{
  "name": "fxa-admin-panel",
  "version": "0.1.0",
  "description": "FxA Admin Panel",
  "scripts": {
    "start": "pm2 start pm2.config.js",
    "stop": "pm2 stop pm2.config.js",
    "restart": "pm2 restart pm2.config.js",
    "lint": "eslint .",
    "build": "npm-run-all build:client build:server",
    "build:client": "tsc --build && SKIP_PREFLIGHT_CHECK=true PUBLIC_URL=/ INLINE_RUNTIME_CHUNK=false CI=false rescripts build",
    "build:server": "tsc -p server/tsconfig.json",
    "test": "npm-run-all test:frontend test:server",
    "test:frontend": "SKIP_PREFLIGHT_CHECK=true PUBLIC_URL=/ INLINE_RUNTIME_CHUNK=false CI=true rescripts test --coverage --verbose",
    "test:server": "jest --coverage --verbose --config server/jest.config.js",
    "format": "prettier --write --config ../../_dev/.prettierrc '**'",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "apollo-boost": "0.4.9",
    "apollo-client": "2.6.10",
    "body-parser": "1.19.0",
    "convict": "5.2.0",
    "dateformat": "3.0.3",
    "express": "4.17.1",
    "express-http-proxy": "1.6.0",
    "fxa-react": "workspace:*",
    "graphql": "14.6.0",
    "helmet": "3.22.0",
    "mozlog": "2.2.0",
    "node-sass": "4.14.1",
    "npm-run-all": "4.1.5",
    "on-headers": "1.0.2",
    "react": "16.13.1",
    "react-apollo": "3.1.5",
    "react-dom": "16.13.1",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.1",
    "serve-static": "1.14.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@apollo/react-testing": "3.0.0",
    "@rescripts/cli": "0.0.14",
    "@testing-library/dom": "5.0.1",
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.5.0",
    "@testing-library/user-event": "7.2.1",
    "@types/chance": "1.1.0",
    "@types/convict": "4.2.1",
    "@types/dateformat": "3.0.1",
    "@types/eslint": "6.8.1",
    "@types/express": "4.17.6",
    "@types/helmet": "0.0.45",
    "@types/jest": "25.2.3",
    "@types/jsdom": "12.2.4",
    "@types/on-headers": "1.0.0",
    "@types/react": "16.9.35",
    "@types/react-router-dom": "5.1.5",
    "@types/serve-static": "1.13.4",
    "@types/supertest": "2.0.9",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "apollo-cache-inmemory": "1.6.6",
    "apollo-link": "1.2.14",
    "apollo-utilities": "1.3.4",
    "chance": "1.1.6",
    "eslint": "6.8.0",
    "eslint-plugin-fxa": "2.0.2",
    "eslint-plugin-jest": "23.13.2",
    "eslint-plugin-react": "7.20.0",
    "fxa-shared": "workspace:*",
    "jest": "25.5.4",
    "pm2": "4.4.0",
    "prettier": "2.0.5",
    "supertest": "4.0.2",
    "ts-jest": "25.5.1",
    "ts-node": "8.10.1",
    "typescript": "3.8.3"
  }
}
