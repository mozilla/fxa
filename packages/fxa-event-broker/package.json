{
  "name": "fxa-event-broker",
  "version": "1.225.1",
  "description": "Firefox Accounts Event Broker",
  "scripts": {
    "audit": "npm audit --json | audit-filter --nsp-config=.nsprc --audit=-",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "../../_scripts/check-url.sh localhost:9000/__heartbeat__ && pm2 start pm2.config.js",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r esbuild-register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "stop": "pm2 stop pm2.config.js",
    "restart": "pm2 restart pm2.config.js",
    "delete": "pm2 delete pm2.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla/fxa.git"
  },
  "author": "Mozilla (https://mozilla.org/)",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla/fxa/issues"
  },
  "homepage": "https://github.com/mozilla/fxa#readme",
  "readmeFilename": "README.md",
  "dependencies": {
    "@google-cloud/firestore": "^5.0.2",
    "@google-cloud/pubsub": "^2.18.4",
    "@grpc/grpc-js": "^1.1.3",
    "@hapi/hoek": "^9.2.0",
    "@hapi/joi": "^15.1.1",
    "@nestjs/common": "^8.2.4",
    "@nestjs/config": "^1.1.6",
    "@nestjs/core": "^8.2.6",
    "@nestjs/graphql": "^8.0.2",
    "@nestjs/mapped-types": "^1.0.1",
    "@nestjs/passport": "^8.1.0",
    "@nestjs/platform-express": "^8.2.6",
    "@nestjs/schedule": "^1.0.2",
    "@sentry/integrations": "^6.16.1",
    "@sentry/node": "^6.16.1",
    "@types/sinon": "10.0.1",
    "aws-sdk": "^2.1068.0",
    "axios": "^0.25.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "convict": "^6.2.1",
    "convict-format-with-moment": "^6.2.0",
    "convict-format-with-validator": "^6.2.0",
    "express": "^4.17.2",
    "fxa-jwtool": "^0.7.2",
    "fxa-shared": "workspace:*",
    "google-auth-library": "^7.11.0",
    "graphql": "^15.6.1",
    "hot-shots": "^9.0.0",
    "jwks-rsa": "^2.0.5",
    "mozlog": "^3.0.2",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "sqs-consumer": "^5.6.0",
    "typesafe-joi": "^2.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.0",
    "@nestjs/schematics": "^8.0.6",
    "@nestjs/testing": "^8.2.6",
    "@types/chance": "^1.1.2",
    "@types/convict": "^5.2.2",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/node": "^16.11.3",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.5",
    "@types/rimraf": "3.0.0",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "audit-filter": "^0.5.0",
    "chance": "^1.1.8",
    "esbuild": "^0.14.2",
    "esbuild-register": "^3.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "factory-bot-ts": "^0.1.5",
    "jest": "27.4.7",
    "nock": "^13.2.2",
    "p-event": "^4.2.0",
    "pm2": "^5.1.2",
    "prettier": "^2.3.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^8.3.0",
    "tsconfig-paths": "^3.12.0",
    "typesafe-node-firestore": "^1.4.0",
    "typescript": "^4.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
