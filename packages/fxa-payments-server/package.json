    "fxa-geodb": "workspace:*",
    "fxa-react": "workspace:*",
    "fxa-settings": "workspace:*",
    "fxa-shared": "workspace:*",
    "helmet": "^7.0.0",
    "hot-shots": "^10.0.0",
    "jest-watch-typeahead": "0.6.5",
    "joi": "^17.8.3",
    "jquery-modal": "https://github.com/mozilla-fxa/jquery-modal.git#0576775d1b4590314b114386019f4c7421c77503",
