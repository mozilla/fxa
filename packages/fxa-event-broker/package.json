{
  "name": "fxa-event-broker",
  "version": "1.171.1",
  "description": "Firefox Accounts Event Broker",
  "scripts": {
    "build": "tsc",
    "lint": "eslint *",
    "audit": "npm audit --json | audit-filter --nsp-config=.nsprc --audit=-",
    "watch": "tsc -w",
    "test": "mocha -r ts-node/register src/test/**/*.spec.ts src/test/**/**/*.spec.ts",
    "start-prod": "npm run build && node ./dist/bin/worker.js",
    "start": "../../_scripts/check-url.sh localhost:9000/__heartbeat__ && pm2 start pm2.config.js",
    "stop": "pm2 stop pm2.config.js",
    "restart": "pm2 restart pm2.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla/fxa.git"
  },
  "engines": {
    "node": ">=12"
  },
  "author": "Mozilla (https://mozilla.org/)",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla/fxa/issues"
  },
  "homepage": "https://github.com/mozilla/fxa#readme",
  "readmeFilename": "README.md",
  "dependencies": {
    "@google-cloud/firestore": "3.8.0",
    "@google-cloud/pubsub": "1.7.3",
    "@grpc/grpc-js": "1.0.4",
    "@hapi/hapi": "19.1.1",
    "@hapi/hoek": "9.0.4",
    "@hapi/joi": "15.1.1",
    "@sentry/node": "5.15.5",
    "aws-sdk": "2.684.0",
    "convict": "6.0.0",
    "fxa-jwtool": "0.7.2",
    "google-auth-library": "5.10.1",
    "hot-shots": "7.4.2",
    "mozlog": "2.2.0",
    "request": "2.88.2",
    "request-promise-native": "1.0.8",
    "sqs-consumer": "5.4.0",
    "typesafe-joi": "2.1.0",
    "uuid": "7.0.3"
  },
  "devDependencies": {
    "@types/chai": "4.2.11",
    "@types/chance": "1.1.0",
    "@types/convict": "5.2.1",
    "@types/eslint": "6.8.1",
    "@types/hapi__hapi": "19.0.3",
    "@types/mocha": "7.0.2",
    "@types/node": "13.13.9",
    "@types/request-promise-native": "1.0.17",
    "@types/sinon": "7.5.2",
    "@types/uuid": "7.0.4",
    "audit-filter": "0.5.0",
    "chai": "4.2.0",
    "chance": "1.1.6",
    "eslint": "6.8.0",
    "factory-bot-ts": "0.1.5",
    "fxa-shared": "workspace:*",
    "mocha": "7.2.0",
    "nock": "12.0.3",
    "nodemon": "2.0.4",
    "p-event": "4.1.0",
    "pm2": "4.4.0",
    "prettier": "2.0.5",
    "sinon": "9.0.0",
    "ts-node": "8.10.1",
    "ts-sinon": "1.0.25",
    "typesafe-node-firestore": "1.3.0",
    "typescript": "3.8.3"
  }
}
