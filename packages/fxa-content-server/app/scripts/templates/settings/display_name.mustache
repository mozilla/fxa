<div id="display-name" class="settings-unit">
  <div class="settings-unit-stub">
    <header class="settings-unit-summary">
      <h2 class="settings-unit-title">{{#t}}Display name{{/t}}</h2>
    </header>
    {{#displayName}}
      <button class="settings-button secondary-button settings-unit-toggle" data-href="settings/display_name">
      <span class="change-button">{{#t}}Change…{{/t}}</span>
      </button>
    {{/displayName}}
    {{^displayName}}
      <button class="settings-button primary-button settings-unit-toggle" data-href="settings/display_name">
      <span class="add-button">{{#t}}Add…{{/t}}</span>
      </button>
    {{/displayName}}
  </div>

  <div class="settings-unit-details">
    <div class="error"></div>

    <form novalidate>
      <p>
        {{#t}}Choose the name you would like to appear in Firefox and when managing your account.{{/t}}
      </p>
      <div class="input-row">
        <input type="text" class="text display-name" placeholder="{{#t}}Display name{{/t}}" value="{{ displayName }}" autofocus  autocomplete="off"/>
      </div>
      <div class="button-row">
        <button type="submit" class="settings-button primary-button">{{#t}}Change{{/t}}</button>
        <button class="settings-button secondary-button cancel">{{#t}}Cancel{{/t}}</button>
      </div>
    </form>
  </div>
</div>
