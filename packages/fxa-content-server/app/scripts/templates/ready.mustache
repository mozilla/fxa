<div id="main-content" class="card">
  <header>
    <h1 id="{{headerId}}" class="card-header">{{{escapedHeaderTitle}}}</h1>
  </header>

  <section>
    <div class="error"></div>

    <div class="graphic graphic-checkbox">{{#t}}Success{{/t}}</div>

    {{#isSync}}
      <p class="account-ready-service">{{{escapedReadyToSyncText}}}</p>
      <div class="button-row">
          <button class="primary-button btn-start-browsing">{{#t}}Manage your account{{/t}}</button>
      </div>
    {{/isSync}}

    {{^isSync}}
      {{#isFromRelyingParty}}
        {{#serviceLogo}}
            <!-- L10N: Pocket image follows `You are now ready to use` -->
            {{#unsafeTranslate}}You are now ready to use <div class="graphic %(serviceLogo)s">%(serviceName)s</div>{{/unsafeTranslate}}
        {{/serviceLogo}}
        {{^serviceLogo}}
          <p class="account-ready-service">{{#t}}You are now ready to use %(serviceName)s{{/t}}</p>
        {{/serviceLogo}}
        {{#showContinueButton}}
          <div class="button-row">
            <button class="primary-button btn-continue">{{#t}}Continue{{/t}}</button>
          </div>
        {{/showContinueButton}}
      {{/isFromRelyingParty}}
      {{^isFromRelyingParty}}
        {{#emailVerified}}
          <p class="account-ready-service">{{{escapedEmailReadyText}}}</p>
          <div class="links">
            <a href="#" class="btn-goto-account">{{#t}}Continue to my account{{/t}}</a>
          </div>
        {{/emailVerified}}
        {{^emailVerified}}
          {{#isSignedIn}}
            <p class="account-ready-service">{{#t}}You are now ready to use %(serviceName)s{{/t}}</p>
          {{/isSignedIn}}
          {{^isSignedIn}}
            <p class="account-ready-generic">{{#t}}Your account is ready!{{/t}}</p>
          {{/isSignedIn}}
        {{/emailVerified}}
      {{/isFromRelyingParty}}
    {{/isSync}}

      {{#isPasswordReset}}
          <div class="button-row">
              <button class="primary-button btn-create-recovery-key">{{#t}}Generate a new account recovery key{{/t}}</button>
          </div>
          <div class="links">
            <a href="#" class="btn-goto-account">{{#t}}Continue to my account{{/t}}</a>
          </div>
      {{/isPasswordReset}}

      <div class="marketing-area"></div>
  </section>
</div>
