<div id="fxa-settings-header-wrapper">
  <header class="fxa-settings-header">
    <h1 id="fxa-manage-account">{{#t}}Manage account{{/t}}</h1>
    {{#showSignOut}}
    <button id="signout" class="settings-button secondary">Sign Out</button>
    {{/showSignOut}}
  </header>
</div>

<div id="fxa-settings-profile-header">
    {{#avatarLinkVisible}}
    <div class="avatar-wrapper avatar-settings-view">
      <a href="/settings/avatar/change" class="change-avatar"></a>
    </div>
    {{/avatarLinkVisible}}
    {{^avatarLinkVisible}}
    <div class="avatar-wrapper avatar-settings-view">
    </div>
    {{/avatarLinkVisible}}
    <p class="signed-in-email-message">
      {{#t}}Hello, {{/t}} {{email}}
    </p>
</div>

<div id="fxa-settings-content" class="card">
  <div id="subviews">
  </div>
</div>

<footer id="legal-footer"><a class="terms" href="/legal/terms">{{#t}}Terms of Service{{/t}}</a><a class="privacy" href="/legal/privacy">{{#t}}Privacy Notice{{/t}}</a></footer>
