{
  "name": "fxa-admin-panel",
  "version": "1.235.1",
  "description": "FxA Admin Panel",
  "scripts": {
    "build-postcss": "postcss src/styles/tailwind.css -o src/styles/tailwind.out.css",
    "build:client": "tsc --build ../fxa-react && tsc --build && NODE_ENV=production npm run build-postcss && SKIP_PREFLIGHT_CHECK=true PUBLIC_URL=/ INLINE_RUNTIME_CHUNK=false CI=false rescripts build",
    "build:server": "tsc -p server/tsconfig.json",
    "build": "npm-run-all build:client build:server",
    "eject": "react-scripts eject",
    "format": "prettier --write --config ../../_dev/.prettierrc '**'",
    "lint": "eslint .",
    "restart": "tsc --build ../fxa-react && npm run build-postcss && pm2 restart pm2.config.js",
    "start": "tsc --build ../fxa-react && npm run build-postcss && pm2 start pm2.config.js",
    "stop": "pm2 stop pm2.config.js",
    "delete": "pm2 delete pm2.config.js",
    "test:frontend": "SKIP_PREFLIGHT_CHECK=true PUBLIC_URL=/ INLINE_RUNTIME_CHUNK=false rescripts test --coverage --verbose",
    "test:server": "jest --runInBand --coverage --verbose --config server/jest.config.js --forceExit",
    "test": "CI=true npm-run-all test:frontend test:server"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.4.5",
    "@sentry/node": "^7.3.1",
    "@sentry/tracing": "^6.19.2",
    "body-parser": "^1.19.1",
    "convict": "^6.2.3",
    "convict-format-with-moment": "^6.2.0",
    "convict-format-with-validator": "^6.2.0",
    "dateformat": "^4.3.1",
    "express": "^4.17.2",
    "express-http-proxy": "^1.6.3",
    "fxa-admin-server": "workspace:*",
    "fxa-react": "workspace:*",
    "graphql": "^15.6.1",
    "helmet": "^5.0.0",
    "mozlog": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "on-headers": "^1.0.2",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-router-dom": "^6.2.2",
    "react-scripts": "^4.0.3",
    "serve-static": "^1.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@rescripts/cli": "0.0.16",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@types/chance": "^1.1.2",
    "@types/convict": "^5.2.2",
    "@types/dateformat": "^3.0.1",
    "@types/express": "^4.17.12",
    "@types/helmet": "4.0.0",
    "@types/jsdom": "^16.2.11",
    "@types/on-headers": "^1.0.0",
    "@types/react": "^17.0.14",
    "@types/serve-static": "1.13.9",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "autoprefixer": "^9.8.6",
    "chance": "^1.1.8",
    "eslint": "^7.32.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-jest": "^24.5.2",
    "eslint-plugin-react": "^7.26.1",
    "fxa-shared": "workspace:*",
    "jest": "27.5.1",
    "jest-watch-typeahead": "0.6.5",
    "pm2": "^5.1.2",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.3.1",
    "supertest": "^6.2.3",
    "tailwindcss": "^1.9.1",
    "tailwindcss-textshadow": "^2.1.3",
    "ts-jest": "^28.0.5",
    "typescript": "^4.5.2"
  }
}
