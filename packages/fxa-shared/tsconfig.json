{
  "compileOnSave": true,
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "allowJs": true,
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "typeRoots": ["./types", "node_modules/@types", "../../node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["./**/*", "./*", "./**/*.json"],
  "exclude": ["dist", "node_modules"]
}
