{
  "name": "fxa-shared",
  "version": "1.207.1",
  "description": "Shared module for FxA repositories",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./": "./dist/"
  },
  "scripts": {
    "postinstall": "tsc --build || true",
    "build": "tsc --build",
    "start": "pm2 start pm2.config.js",
    "stop": "pm2 stop pm2.config.js",
    "restart": "pm2 restart pm2.config.js",
    "test": "yarn test:mocha && yarn test:jest",
    "test:mocha": "tsc --build && node ./scripts/mocha-coverage.js -r ts-node/register --recursive test/**/*.{js,ts}",
    "test:jest": "jest --coverage",
    "audit": "npm audit --json | audit-filter --nsp-config=.nsprc --audit=-",
    "lint": "eslint .",
    "format": "prettier --write --config ../../_dev/.prettierrc '**'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla/fxa.git"
  },
  "keywords": [
    "fxa"
  ],
  "author": "Mozilla (https://mozilla.org/)",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla/fxa/issues"
  },
  "homepage": "https://github.com/mozilla/fxa/tree/main/packages/fxa-shared#readme",
  "devDependencies": {
    "@nestjs/testing": "^7.6.17",
    "@types/chai": "^4.2.18",
    "@types/chance": "^1.1.2",
    "@types/generic-pool": "^3.1.9",
    "@types/jest": "^26.0.23",
    "@types/joi": "^14.3.4",
    "@types/lodash.omitby": "^4",
    "@types/lodash.pick": "^4",
    "@types/mocha": "^8.2.2",
    "@types/mysql": "^2",
    "@types/node": "^14.14.37",
    "@types/proxyquire": "^1.3.28",
    "@types/redis": "^2.8.29",
    "@types/sinon": "10.0.1",
    "@types/superagent": "^4.1.11",
    "audit-filter": "^0.5.0",
    "chai": "^4.3.4",
    "chance": "^1.1.7",
    "eslint": "^7.27.0",
    "eslint-plugin-fxa": "^2.0.2",
    "jest": "26.6.0",
    "jsdom": "16.6.0",
    "jsdom-global": "3.0.2",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "pm2": "^4.5.6",
    "prettier": "^2.3.0",
    "proxyquire": "^2.1.3",
    "sinon": "^9.0.3",
    "ts-jest": "26.5.6",
    "ts-loader": "^9.0.0",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4",
    "underscore": "^1.13.1",
    "uuid": "^8.3.2"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.17",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.17",
    "@nestjs/graphql": "^7.10.6",
    "@nestjs/mapped-types": "^0.4.1",
    "@sentry/browser": "^5.27.6",
    "@sentry/integrations": "^5.29.1",
    "@sentry/node": "^6.0.1",
    "@types/js-md5": "^0.4.2",
    "accept-language": "^2.0.17",
    "ajv": "^6.12.2",
    "apollo-server": "^2.24.1",
    "aws-sdk": "^2.920.0",
    "bluebird": "^3.7.2",
    "celebrate": "^10.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "find-up": "^5.0.0",
    "generic-pool": "^3.7.8",
    "graphql": "^15.5.0",
    "hot-shots": "^8.3.2",
    "joi": "^14.3.1",
    "js-md5": "^0.7.3",
    "knex": "^0.95.6",
    "lodash.omitby": "^4.6.0",
    "lodash.pick": "^4.4.0",
    "moment": "^2.29.1",
    "mozlog": "^3.0.2",
    "mysql": "^2.18.1",
    "node-uap": "git://github.com/mozilla-fxa/node-uap.git#96dc1f9f224422ec184395b6408cd1fc40ee452a",
    "objection": "^2.2.15",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.6",
    "stripe": "^8.149.0",
    "superagent": "^6.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "nestjs",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
