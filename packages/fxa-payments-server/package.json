{
  "name": "fxa-payments-server",
  "version": "1.152.0",
  "description": "Firefox Accounts Payments Service",
  "scripts": {
    "lint": "npm-run-all --parallel lint:*",
    "lint:eslint": "eslint .",
    "lint:sass": "sass-lint -v",
    "audit": "npm audit --json | audit-filter --nsp-config=.nsprc --audit=-",
    "start": "node server/bin/fxa-payments-server.js",
    "start-dev": "npm-run-all --parallel server:proxy server:react-scripts",
    "start-dev-debug": "npm-run-all --parallel server:proxy-debug server:react-scripts",
    "server:proxy": "PROXY_STATIC_RESOURCES_FROM='http://127.0.0.1:3032' node server/bin/fxa-payments-server.js",
    "server:proxy-debug": "PROXY_STATIC_RESOURCES_FROM='http://127.0.0.1:3032' node --inspect server/bin/fxa-payments-server.js",
    "server:react-scripts": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "test": "npm-run-all test:*",
    "test:frontend": "react-scripts test --coverage --verbose",
    "test:server": "jest --coverage --verbose --config server/jest.config.js",
    "format": "prettier '**' --write",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla/fxa.git"
  },
  "keywords": [
    "Firefox Accounts",
    "FxA",
    "Payments"
  ],
  "author": "Mozilla (https://mozilla.org/)",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla/fxa/issues"
  },
  "homepage": "https://github.com/mozilla/fxa/tree/master/packages/fxa-payments-server#README.md",
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/register": "^7.7.0",
    "@storybook/addon-actions": "^5.2.6",
    "@storybook/addon-links": "^5.2.6",
    "@storybook/addons": "^5.2.6",
    "@storybook/react": "^5.2.6",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^24.0.23",
    "@types/jsdom": "^12.2.4",
    "@types/node": "^12.12.7",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^7.1.5",
    "@types/react-router": "^5.1.3",
    "@types/react-router-dom": "^4.3.3",
    "@types/sinon": "^7.5.0",
    "@types/storybook__addon-actions": "^3.4.2",
    "@types/storybook__addon-links": "^3.3.5",
    "@types/storybook__react": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "audit-filter": "^0.5.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "browserslist": "^4.7.2",
    "caniuse-lite": "^1.0.30001010",
    "chai": "^4.2.0",
    "eslint": "^6.6.0",
    "eslint-plugin-fxa": "2.0.1",
    "eslint-plugin-jest": "22.21.0",
    "express-http-proxy": "^1.6.0",
    "handlebars": "^4.5.3",
    "nock": "^10.0.6",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.0",
    "prettier": "^1.19.1",
    "sass-lint": "^1.13.1",
    "sinon": "^7.5.0",
    "supertest": "4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2",
    "wait-for-expect": "^1.3.0"
  },
  "dependencies": {
    "@sentry/browser": "^5.9.0",
    "@sentry/node": "^5.9.0",
    "@types/nock": "^10.0.1",
    "@types/react-stripe-elements": "^1.3.5",
    "@types/react-transition-group": "^4.2.3",
    "celebrate": "^10.1.0",
    "classnames": "^2.2.6",
    "convict": "^5.2.0",
    "dayjs": "^1.8.17",
    "eslint-plugin-jest": "^22.21.0",
    "express": "^4.16.4",
    "helmet": "3.21.1",
    "joi": "^14.3.1",
    "morgan": "^1.9.1",
    "mozlog": "^2.2.0",
    "node-sass": "^4.13.0",
    "on-headers": "^1.0.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.2.0",
    "react-stripe-elements": "^5.1.0",
    "react-test-renderer": "^16.12.0",
    "react-transition-group": "^4.3.0",
    "serve-static": "^1.13.2",
    "type-to-reducer": "^1.2.0"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=6.4.1"
  },
  "readmeFilename": "README.md",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/*",
      "!**/test-utils.*",
      "!**/build/*",
      "!**/*.stories.*",
      "!**/types.tsx",
      "!**/*.d.ts",
      "!**/jest*js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 93,
        "functions": 84,
        "lines": 88,
        "statements": 88
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
