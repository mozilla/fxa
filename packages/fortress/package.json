{
  "name": "fortress",
  "description": "A simple tasklist app that demonstrates FxA Sign-In",
  "version": "0.0.2",
  "author": {
    "name": "Mozilla",
    "url": "https://mozilla.org/"
  },
  "licenses": [
    {
      "type": "MPL 2.0",
      "url": "https://mozilla.org/MPL/2.0/"
    }
  ],
  "homepage": "http://fortress.firefox.org/",
  "bugs": "https://github.com/mozilla/fxa/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla/fxa.git"
  },
  "private": true,
  "dependencies": {
    "client-sessions": "0.6.0",
    "ejs": "3.1.3",
    "express": "4.16.4",
    "morgan": "1.9.1"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6.4.1"
  },
  "devDependencies": {
    "audit-filter": "0.5.0",
    "browser-sync": "2.26.7",
    "eslint": "6.8.0",
    "eslint-plugin-fxa": "2.0.1",
    "fxa-shared": "workspace:*",
    "nodemon": "2.0.4",
    "npm-run-all": "4.1.5",
    "pm2": "4.4.0",
    "prettier": "2.0.5",
    "stylelint": "13.5.0",
    "stylelint-config-prettier": "8.0.1"
  },
  "scripts": {
    "lint": "npm-run-all --parallel lint:eslint lint:style",
    "audit": "npm audit --json | audit-filter --nsp-config=.nsprc --audit=-",
    "lint:eslint": "eslint .",
    "lint:style": "stylelint --config ../../_dev/.stylelintrc static/*.css",
    "start": "pm2 start pm2.config.js",
    "stop": "pm2 stop pm2.config.js",
    "restart": "pm2 restart pm2.config.js",
    "test": "npm run lint",
    "format": "prettier --write --config ../../_dev/.prettierrc '**'",
    "dev": "nodemon server.js",
    "ui": "browser-sync start --proxy='localhost:9292' --files='**/*.css, **/*.ejs, **/*.js' --ignore=node_modules --port=5000 --no-open --serveStatic='static'"
  }
}
