<div id="main-content">
  <header>
    <h1 id="fxa-settings-header">{{#t}}Manage account{{/t}}</h1>
  </header>

  <section>
    <div class="error"></div>
    <div class="success"></div>
    <div class="avatar-wrapper avatar-view">
      {{#avatar}}
        <img src="{{ avatar }}"  alt="{{ email }}"/>
      {{/avatar}}
    </div>

    <p class="signed-in-email-message">{{#t}}You are signed in as{{/t}}<br />{{email}}</p>

    <ul class="links">
      <li>
        <a id="change-password" href="/change_password">{{#t}}Change password{{/t}}</a>
      </li>
      <li>
        <a id="delete-account" href="/delete_account">{{#t}}Delete account{{/t}}</a>
      </li>
      {{#showSignOut}}
        <li>
          <a id="signout" href="#">{{#t}}Sign out{{/t}}</a>
        </li>
      {{/showSignOut}}
  </section>
</div>
<footer id="legal-footer"><a class="terms" href="/legal/terms">{{#t}}Terms of Service{{/t}}</a><a class="privacy" href="/legal/privacy">{{#t}}Privacy Notice{{/t}}</a></footer>
