{
  "name": "fxa-admin-server",
  "version": "1.154.0",
  "description": "FxA GraphQL Admin Server",
  "scripts": {
    "build": "tsc",
    "lint": "eslint *",
    "audit": "npm audit --json | audit-filter --nsp-config=.nsprc --audit=-",
    "watch": "tsc -w",
    "start": "pm2 start pm2.config.js",
    "stop": "pm2 stop pm2.config.js",
    "restart": "pm2 restart pm2.config.js",
    "test": "mocha -r ts-node/register src/test/**/*.spec.ts src/test/**/**/*.spec.ts src/test/**/**/**/*.spec.ts",
    "email-bounce": "ts-node ./scripts/email-bounce.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla/fxa.git"
  },
  "engines": {
    "node": ">=12"
  },
  "author": "Mozilla (https://mozilla.org/)",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla/fxa/issues"
  },
  "homepage": "https://github.com/mozilla/fxa#readme",
  "readmeFilename": "README.md",
  "dependencies": {
    "@sentry/integrations": "5.15.5",
    "@sentry/node": "5.15.5",
    "apollo-server": "2.13.1",
    "apollo-server-express": "2.13.1",
    "convict": "6.0.0",
    "graphql": "14.6.0",
    "knex": "0.20.15",
    "mozlog": "2.2.0",
    "mysql": "2.18.1",
    "objection": "2.1.5",
    "reflect-metadata": "0.1.13",
    "tslib": "1.13.0",
    "type-graphql": "0.17.6",
    "typedi": "0.8.0"
  },
  "devDependencies": {
    "@types/chai": "4.2.11",
    "@types/chance": "1.1.0",
    "@types/convict": "4.2.1",
    "@types/eslint": "6.8.1",
    "@types/graphql": "14.5.0",
    "@types/mocha": "7.0.2",
    "@types/node": "13.13.9",
    "@types/proxyquire": "1.3.28",
    "@types/sinon": "7.5.2",
    "@types/supertest": "2.0.9",
    "@types/yargs": "15.0.5",
    "audit-filter": "0.5.0",
    "chai": "4.2.0",
    "chance": "1.1.6",
    "eslint": "6.8.0",
    "fxa-shared": "workspace:*",
    "mocha": "7.2.0",
    "nodemon": "2.0.4",
    "pm2": "4.4.0",
    "prettier": "2.0.5",
    "proxyquire": "2.1.3",
    "sinon": "9.0.2",
    "supertest": "4.0.2",
    "ts-node": "8.10.1",
    "ts-sinon": "1.2.0",
    "typescript": "3.8.3",
    "yargs": "15.3.1"
  }
}
