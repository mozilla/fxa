plugins:
  - fxa
  - sorting
extends:
  - plugin:fxa/client
  - prettier

# Required for `import( )` webpack feature
parser: babel-eslint

rules:
  no-console: off
  camelcase: off
  strict: off
  no-useless-escape: off
  handle-callback-err: off

parserOptions:
  ecmaVersion: 2018
  sourceType: module