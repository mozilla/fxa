    "file-loader": "^6.2.0",
    "file-saver": "^2.0.5",
    "fs-extra": "^11.2.0",
    "fxa-auth-client": "workspace:*",
    "fxa-common-password-list": "^0.0.4",
    "fxa-react": "workspace:*",
    "html-webpack-plugin": "^5.6.0",
