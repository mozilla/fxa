<div id="main-content" class="card">
  <div id="choose-what-to-sync-graphic"></div>

  <header>
    <h1 id="fxa-choose-what-to-sync-header">
      {{#t}}Choose what to sync{{/t}}
      <span class="email">{{ email }}</span>
    </h1>
  </header>

  <section>
    <div class="error"></div>
    <div class="success"></div>

    <form id="choose-what-to-sync" novalidate>
        <div class="two-col-items">
          <div class="two-col-block">
            {{#hasTabSupport}}
              <div class="input-row choose-what-to-sync-row">
                <label class="fxa-checkbox">
                  <input name="sync-content" type="checkbox" class="customize-sync" checked="checked" value="tabs">
              <span class="fxa-checkbox__label">
                {{#t}}Tabs{{/t}}
              </span>
                </label>
              </div>
            {{/hasTabSupport}}

            {{#hasBookmarkSupport}}
              <div class="input-row choose-what-to-sync-row">
                <label class="fxa-checkbox">
                  <input name="sync-content" type="checkbox" class="customize-sync" checked="checked" value="bookmarks">
              <span class="fxa-checkbox__label">
                {{#t}}Bookmarks{{/t}}
              </span>
                </label>
              </div>
            {{/hasBookmarkSupport}}

            {{#hasDesktopAddonSupport}}
              <div class="input-row choose-what-to-sync-row">
                <label class="fxa-checkbox">
                  <input name="sync-content" type="checkbox" class="customize-sync" checked="checked" value="addons">
                <span class="fxa-checkbox__label">
                  {{#t}}Add-ons{{/t}}
                </span>
                </label>
              </div>
            {{/hasDesktopAddonSupport}}
          </div>
          <div class="two-col-block">
            {{#hasPasswordSupport}}
              <div class="input-row choose-what-to-sync-row">
                <label class="fxa-checkbox">
                  <input name="sync-content" type="checkbox" class="customize-sync" checked="checked" value="passwords">
              <span class="fxa-checkbox__label">
                {{#t}}Passwords{{/t}}
              </span>
                </label>
              </div>
            {{/hasPasswordSupport}}

            {{#hasHistorySupport}}
              <div class="input-row choose-what-to-sync-row">
                <label class="fxa-checkbox">
                  <input name="sync-content" type="checkbox" class="customize-sync" checked="checked" value="history">
              <span class="fxa-checkbox__label">
                {{#t}}History{{/t}}
              </span>
                </label>
              </div>
            {{/hasHistorySupport}}

            {{#hasDesktopPreferencesSupport}}
              <div class="input-row choose-what-to-sync-row">
                <label class="fxa-checkbox">
                  <input name="sync-content" type="checkbox" class="customize-sync" checked="checked" value="prefs">
                <span class="fxa-checkbox__label">
                  {{#t}}Preferences{{/t}}
                </span>
                </label>
              </div>
            {{/hasDesktopPreferencesSupport}}
          </div>
        </div>
        <div class="extra-links extra-links-choose-what-to-sync">{{#t}}Add-ons and Preferences do not currently sync on mobile devices.{{/t}}</div>
        <div class="button-row">
          <button id="submit-btn" type="submit">{{#t}}Sign up{{/t}}</button>
        </div>
    </form>

    <div class="links">
      <a href="#" id="back">{{#t}}Back{{/t}}</a>
    </div>

  </section>
</div>
