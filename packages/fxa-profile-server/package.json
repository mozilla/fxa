  "devDependencies": {
    "audit-filter": "^0.5.0",
    "commander": "2.9.0",
    "eslint": "^6.8.0",
    "eslint-plugin-fxa": "^2.0.2",
    "insist": "1.0.1",
    "mkdirp": "0.5.1",
    "mocha": "^7.1.2",
    "mocha-text-cov": "0.1.1",
    "nock": "^12.0.3",
    "nyc": "^15.0.1",
    "pm2": "^4.4.0",
    "pngparse": "2.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "through": "2.3.8"
