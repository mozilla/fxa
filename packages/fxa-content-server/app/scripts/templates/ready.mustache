<div id="main-content" class="card">
  <header>
    <h1 id="{{headerId}}">{{headerTitle}}</h1>
  </header>

  <section>
    <div class="error"></div>

    <div class="graphic graphic-checkbox">{{#t}}Success{{/t}}</div>

    {{#isSync}}
      <p class="account-ready-service">{{readyToSyncText}}</p>
        
      {{#shouldShowSyncPreferencesButton}}
        <form novalidate>
          <div class="button-row">
            <button id="sync-preferences" type="submit">{{#t}}Sync preferences{{/t}}</button>
          </div>
        </form>
      {{/shouldShowSyncPreferencesButton}}
    {{/isSync}}

    {{^isSync}}
      {{#serviceName}}
        <p class="account-ready-service">{{#t}}You are now ready to use %(serviceName)s{{/t}}</p>
        {{#shouldShowProceedButton}}
          <form novalidate>
            <div class="button-row">
              <button id="proceed" type="submit">{{#t}}Proceed{{/t}}</button>
            </div>
          </form>
        {{/shouldShowProceedButton}}
      {{/serviceName}}
      {{^serviceName}}
        <p class="account-ready-generic">{{#t}}Your account is ready!{{/t}}</p>
      {{/serviceName}}
    {{/isSync}}

    <div class="marketing-area"></div>
  </section>
</div>

