  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/*",
      "!**/test-utils.*",
      "!**/build/*",
      "!**/*.stories.*",
      "!**/types.tsx",
      "!**/*.d.ts",
      "!**/jest*js",
      "!src/lib/enzyme.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 94,
        "functions": 84,
        "lines": 88,
        "statements": 88
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
