    "express": "^4.16.4",
    "fxa-content-server": "workspace:*",
    "fxa-geodb": "workspace:*",
    "fxa-react": "workspace:*",
    "fxa-settings": "workspace:*",
    "fxa-shared": "workspace:*",
    "helmet": "3.21.1",
    "hot-shots": "^7.0.0",
    "intl-pluralrules": "^1.1.0",
    "joi": "^14.3.1",
    "morgan": "^1.9.1",
    "mozlog": "^2.2.0",
    "node-sass": "^4.13.1",
    "on-headers": "^1.0.2",
