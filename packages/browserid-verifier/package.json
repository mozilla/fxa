{
  "author": "Mozilla (https://mozilla.org/)",
  "license": "MPL-2.0",
  "name": "browserid-verifier",
  "description": "A node.js verification server for BrowserID assertions.",
  "version": "0.10.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla/fxa.git"
  },
  "homepage": "https://github.com/mozilla/fxa/tree/master/packages/browserid-verifier/",
  "bugs": "https://github.com/mozilla/fxa/issues/",
  "main": "lib/server.js",
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "async": "2.6.1",
    "body-parser": "1.18.3",
    "browserid-local-verify": "0.5.2",
    "compute-cluster": "0.0.9",
    "convict": "^6.0.0",
    "express": "4.16.4",
    "intel": "1.2.0",
    "morgan": "1.9.1",
    "mozlog": "2.2.0",
    "optimist": "0.6.1",
    "toobusy-js": "0.5.1",
    "underscore": "1.9.1"
  },
  "devDependencies": {
    "audit-filter": "0.5.0",
    "eslint": "6.8.0",
    "eslint-plugin-fxa": "2.0.1",
    "fxa-shared": "workspace:*",
    "mocha": "7.2.0",
    "pm2": "4.4.0",
    "prettier": "2.0.5",
    "request": "2.88.0",
    "should": "13.2.3",
    "temp": "0.9.0",
    "walk": "2.3.14"
  },
  "scripts": {
    "audit": "npm audit --json | audit-filter --nsp-config=.nsprc --audit=-",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "mocha --exit -t 5000 -R spec tests/*.js",
    "format": "prettier --write --config ../../_dev/.prettierrc '**'",
    "start": "pm2 start pm2.config.js",
    "stop": "pm2 stop pm2.config.js",
    "restart": "pm2 restart pm2.config.js"
  }
}
